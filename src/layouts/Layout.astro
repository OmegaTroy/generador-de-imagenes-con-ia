---
import Ghost from '../components/Ghost.astro';
import NavBar from '../components/NavBar.astro';
import Background from '../components/Background.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./vispera-de-todos-los-santos.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" />
		<title>{title}</title>
		
	</head>
	<body class="min-h-screen">
		<NavBar />
		<!-- <Ghost /> -->
		<slot />
		<img src="./spiderWeb.png" alt="Spider Web" class="absolute sombras right-0 top-[-5%] w-full spointer-events-none h-[35%] tablet:h-[46%]" />
		<Background />
	</body>
</html>

<style is:global>
	@font-face base{
		font-family: 'JollyLodger';
		src: url('./fonts/JollyLodger-Regular.ttf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
		font-named-instance: 'Regular';
	}
  body{
		position: relative;
      margin: 0;
      padding: 0;
			min-height: 100vh;
			padding-top: 30px;
			background-image: radial-gradient(#223, #112);
			color: #f0f0f0;
			font-family: 'JollyLodger';
  }
	.sombras{
		filter: drop-shadow(7px 0px 3px black);
	}
</style>